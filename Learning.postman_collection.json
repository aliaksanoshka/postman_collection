		{
			"name": "12 tests for one page",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1 - json validation",
							"pm.test(\"json validation\", function() {",
							"pm.response.to.have.jsonBody()",
							"});",
							"",
							"// 2. we have all the declared fiels",
							"pm.test(\"Check that we have all the declared fiels\", function(){",
							"    const jsonData= pm.response.json();",
							"    pm.expect(jsonData).to.have.property(\"copyright\");",
							"    pm.expect(jsonData).to.have.property(\"date\");",
							"    pm.expect(jsonData).to.have.property(\"explanation\");",
							"    pm.expect(jsonData).to.have.property(\"hdurl\");",
							"})",
							"",
							"//3. Field value is not NULL",
							"pm.test(\"Check if value is not NULL\", function(){",
							"    var jsonData= pm.response.json();",
							"    pm.expect(jsonData.copyright).not.equal(null);",
							"    pm.expect(jsonData.date).not.equal(null);",
							"    pm.expect(jsonData.explanation).not.equal(null);",
							"    pm.expect(jsonData.hdurl).not.equal(null);",
							"})",
							"",
							"//4. Field value isn't empty",
							"pm.test(\"Field value isn't empty\", function(){",
							"    var jsonData= pm.response.json();",
							"    pm.expect(jsonData.copyright).not.equal(\"\");",
							"    pm.expect(jsonData.date).not.equal(\"\");",
							"    pm.expect(jsonData.explanation).not.equal(\"\");",
							"    pm.expect(jsonData.hdurl).not.equal(\"\");",
							"})",
							"//5. Check specific data for fields",
							"pm.test(\"Check specific data for fields\",function(){",
							"    var jsonData= pm.response.json();",
							"    pm.expect(jsonData.copyright).to.equal(\"Laurie Hatch\");",
							"    pm.expect(jsonData.date).to.equal(\"2021-11-26\");",
							"    pm.expect(jsonData.hdurl).to.equal(\"https://apod.nasa.gov/apod/image/2111/LH7528_36EclipsePartialWithPlieades_1280x1280.jpg\");",
							"    pm.expect(jsonData.media_type).to.equal(\"image\");",
							"})",
							"//6. Check status code is 200",
							"pm.test(\"Check status code is 200\", function(){",
							"    pm.response.to.have.status(200);",
							"})",
							"//7. Check status message is ok",
							"pm.test(\"Check status message is ok\",function(){",
							"    pm.response.to.have.status(\"OK\");",
							"});",
							"//8. REsponse time is less than 1000ms",
							"pm.test(\"REsponse time is less than 1000ms\",function(){",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);",
							"});",
							"//9. Check headers content type",
							"pm.test(\"Check headers content type\",function(){",
							"    pm.response.to.have.header(\"Content-Type\");",
							"});",
							"//10. THe response a specific header with a specific value",
							"pm.test(\"THe response a specific header with a specific value\", function(){",
							"    pm.response.to.be.header(\"Content-Type\",\"application/json\");",
							"});",
							"",
							"//11. Cookie exist",
							"pm.test(\"Cookie exist\",function(){",
							"    pm.cookies.has(\"accessToken \");",
							"})",
							"",
							"//12. Cookie has value",
							"pm.test(\"Cookie has value\", function(){",
							"    try{",
							"        var MY_COOKIE = pm.cookies.get(\"accessToken\");",
							"        console.log(MY_COOKIE);",
							"    } catch(e){",
							"        console.log(\"Some problem with cookie _>\" + e);",
							"    }",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
